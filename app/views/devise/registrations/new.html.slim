section.module-small
  .container
    .row
      .col-xs-10.col-xs-offset-1.col-md-4.col-md-offset-4.sign_up_menu
        h2.page-header
          | ICHIOSHIに登録
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          = f.hidden_field :name
          .form_menu
            .field.col-md-12
              = f.label :name
              br
              = f.text_field :name, disabled: true
            .field.col-md-12
              = f.label :email
              br
              = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
            .field.col-md-12
              = f.label :password
              = f.password_field :password, autocomplete: "off", placeholder: "８文字以上の英数字", class: "form-control"
            .field.col-md-12
              = f.check_box :accepted, {}, checked_value: "true", unchecked_value: "false"
              = link_to "利用規約", '/rule'
              |  に同意する
            .actions
              = f.submit "登録する（無料）", class: "btn btn-default"
        br
        = render "devise/shared/links"
