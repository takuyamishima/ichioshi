<% breadcrumb :user, @user %>
<% provide(:title, @user.name) %>
<h1>My page</h1>

<ul class="users">
  <li><%= @user.name %></li>
  <li><%= @user.email %></li>
  
  <% if (@user.provider == "facebook") %>
    <% @user.icon = @user.icon.insert(4,"s") %>
    <%= image_tag @user.icon, :class => "img-circle", :alt => "Karan Singh Sisodia", :size => "100x100" %>
  <% end %>
  <% unless @user.avator.blank? %>
    <%= image_tag(@user.avator.url, :class => "img-circle", :alt => "Karan Singh Sisodia", :size => "100x100") %>   
  <% else %>
    <%= image_tag('/no_img.png', :class => "img-circle", :alt => "Karan Singh Sisodia", :size => "100x100") %>
  <% end %>
</ul>

<%= link_to 'ユーザーを削除する', users_destroy_path(id: current_user.id), method: :delete %>
