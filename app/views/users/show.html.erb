<section class="module-medium" id="demos">
  <% if @user.coverimg.blank? %>
    <%= image_tag('https://s3-ap-northeast-1.amazonaws.com/tamtim/uploads/usercoverimg.jpg', :class => "mypagecover-img") %>
  <% else %>
    <%= image_tag(@user.coverimg.url, :class => "mypagecover-img") %>
  <% end %>
  <div class="container">
        <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
    <div class="mypageicon">
      <% if (@user.provider == "facebook") %>
        <%= image_tag @user.icon, :class => "img-circle", :alt => "icon", :size => "100x100" %>
      <% else %>
        <%= image_tag('https://s3-ap-northeast-1.amazonaws.com/tamtim/uploads/default.png', :class => "img-circle", :alt => "icon", :size => "100x100") %>
      <% end %>
    </div>
    <div class="follow_button">
      <%= render 'follow_form' %>
    </div>
            <h3><%= @user.name %></h3>
          <div class="FollowCountContainar">
            <%= render 'stats' %>
          </div><!--FollowCountContainar-->
            <%= @user.profile  %>
            <% if current_user && @user.id == current_user.id %>
              <div class="UserEditLink">
                <%= link_to(content_tag(:i, 'プロフィールを編集する', class: 'fa fa-cog'), edit_user_registration_path)  %>
              </div>
            <% end %>
          </div>
          </div>

    <div class="user_container   col-sm-6 col-sm-offset-3">
      <div class="row">
        <ul class="nav nav-tabs">
          <li class="user-menu active">
            <a href="#tab1" class="nav-link" data-toggle="tab">投稿一覧</a>
          </li>
          <li class="user-menu">
            <a href="#tab2" class="nav-link" data-toggle="tab">お気に入り一覧</a>
          </li>
          <li class="user-menu">
            <a href="#tab3" class="nav-link" data-toggle="tab">いいねしたレビュー</a>
          </li>
        </ul>
      </div>
      <div class="row">
        <div class="tab-content">
          <div id="tab1" class="tab-pane active">
            <% @review.order("created_at DESC").each do |review| %>
              <div class="waku">
                <div class="grid spbodyfont">
                
                                            <div class="topicon">
                            <% if (review.user.provider == "facebook") %>
                              <%= image_tag review.user.icon, :class => "img-circle", :alt => "icon", :size => "70x70" %>
                            <% else %>
                              <%= image_tag('https://s3-ap-northeast-1.amazonaws.com/tamtim/uploads/default.png', :class => "img-circle", :alt => "icon", :size => "70x70") %>
                            <% end %>
                          </div><!--topicon-->
                                                <div class="grid1"><%= link_to review.title.truncate(19), review_path(review.id),class:"comment" %></div>
                          <div class="grid2"><%= link_to review.user.name, user_path(id: review.user.id),class:"postname" %></div>

                                    </div><!--spbodyfont-->
                      <div class="post-thumbnail">
                        <% if review.images.count > 1 %>
                          <ul class="slider">
                        <% else %>
                          <ul class="imageViewer">
                        <% end %>
                        <% review.images.each do |image| %>
                          <li><%= image_tag(image.to_s, :class => 'fit-imgtop') %></li>
                        <% end %>
                        </ul>
                      </div>
                      <div class="main-content">
                        
                        <div class=grid_iine>
                          <div class="grid_iine_1"><i id="review-<%= review.id %>" data-review-id="<%= review.id %>">
                            <%= render "likes/like", review: review %></i>
                          </div>
                          <div class="grid_iine_2"><i id="comment-<%= review.id %>" data-comment-id="<%= review.id %>">
                            <%= render "comments/comment", review: review %></i>
                          </div>
                        </div>
                        
                      <div class="spbodyfont">
                        <div id="reviewarea-<%= review.id %>" data-reviewarea-id="<%= review.id %>">
                          <%= render partial: 'reviews/review2', locals: { review: review } %>
                        </div>
                      </div>
                      <div class="spbodyfont">
                        <div id="comments_area-<%= review.id %>" data-comments_area-id="<%= review.id %>"><!-- #① -->
                          <!-- 投稿されたコメント一覧をブログの詳細ページに表示するためのrender -->
                          <% @comments = review.comments %>
                          <%= render partial: 'comments/index_top', locals: { comments: @comments } %>
                        </div>
                      </div>            
                      <div class="postday"><%= review.created_at.strftime("%m月%d日") %></div>
                      <% if user_signed_in? %>
                        <% unless review.user_id == current_user.id %>
                        <div id="commentarea-<%= review.id %>" data-comment-id="<%= review.id %>">
                          <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
                          <%= render partial: 'comments/form_top_before', locals: { comment: @comment, review: review } %>
                        </div>
                        <% end %>
                      <% end %>            
                      
                      </div><!--main-content-->     
              </div><!--waku-->
            <% end %><!--review-->
          </div><!--tab1-->
          
          <div id="tab2" class="tab-pane">
            
            <% @user.favorite_reviews.order("created_at DESC").each do |review| %>

                    <div class="waku">
                      <div class="grid spbodyfont">
                          <div class="topicon">
                            <% if (review.user.provider == "facebook") %>
                              <%= image_tag review.user.icon, :class => "img-circle", :alt => "icon", :size => "70x70" %>
                            <% else %>
                              <%= image_tag('https://s3-ap-northeast-1.amazonaws.com/tamtim/uploads/default.png', :class => "img-circle", :alt => "icon", :size => "70x70") %>
                            <% end %>
                          </div><!--topicon-->
                            <div class="grid1"><%= link_to review.title.truncate(19), review_path(review.id),class:"comment" %></div>
                          <div class="grid2"><%= link_to review.user.name, user_path(id: review.user.id),class:"postname" %></div>
                     </div>
                      <div class="post-thumbnail">
