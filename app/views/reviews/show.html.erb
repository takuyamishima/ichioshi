<p><%= link_to @post_user.name, user_path(id: @post_user.id) %>
<p>投稿日時: <%= @review.created_at.strftime("%Y年%m月%d日") %></p>
<p><h1><%= @review.title %></h1></p>
<p><%= @review.content %></p>
<p id="notice"><%= notice %></p>
<p>
<% unless @review.image.blank? %>
  <%= image_tag(@review.image.url) %>   
<% else %>
  <%= image_tag '/no_img.png' %>
<% end %>
</p>
<% unless @review.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(review_id: @review.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<% hoge = "https://localhost:3000/reviews/1" %>
<a href="https://www.facebook.com/share.php?url=<%= request.url %>" target="_blank"><img src ="/assets/icon/facebook-icon2.png"></a>
<a href="https://twitter.com/share?url=<%= request.url %>" rel="nofollow" target="_blank"><img src ="/assets/icon/twitter-icon2.png"></a>
<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Back', reviews_path %>
