<div class="field">
     <%= form.label :tags %><br>
    <%= collection_check_boxes(:hashtag, :hashtag_ids, Hashtag.all, :id, :hashtag_name ) do |t|  %>
      <% t.label { t.check_box + t.text } %>
      <% end %>
</div>
-->
  <br>
  <%= form.submit "レビューを投稿する", class: "btn btn-round btn-d"  %>

<% end %>
