<%= form_with(model: @review, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= @review.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.cktext_area :content, :class => "ckeditor" %>
  </div>

  <div class="field">
    <%= form.label :サムネイル用画像 %>
    <!-- 確認画面から新規作成画面に戻った時に、 -->
    <!-- アップロードした画像を表示させるための記述 -->
    <%= image_tag(@review.image.url) if @review.image.url %>
    <%= form.file_field :image, id: :review_image %>
  </div>

  <div class="field">
    <%= form.label :下書き %>
    <%= form.check_box 'draft', {}, false, true %>
  </div>


  <div class="field">
    <%= form.label :skill_list, "スキル・特技（カンマ区切り）" %><br>
    <%= text_field_tag 'review[skill_list]', @review.skill_list.join(',') %>
  </div>
  <div class="field">
    <%= form.label :interest_list, "興味・関心（カンマ区切り）" %><br>
    <%= text_field_tag 'review[interest_list]', @review.interest_list.join(',') %>
  </div>




<div class="field">
     <%= form.label :tags %><br>
    <%= collection_check_boxes(:hashtag, :hashtag_ids, Hashtag.all, :id, :hashtag_name ) do |t|  %>
      <% t.label { t.check_box + t.text } %>
      <% end %> 
</div>
  <%= form.submit "レビューを投稿する", class: "btn btn-round btn-d"  %>

<% end %>
