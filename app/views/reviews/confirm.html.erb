<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @review, url: reviews_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

  <p>タイトル:<%= @review.title %></p>
  <p>本文:<%= @review.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @review, url: reviews_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

  <%= form.submit  "もどる", name: 'back' %>
<% end %>