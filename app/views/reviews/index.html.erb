<section class="module-medium" id="demos">
  <div class="container">
    <h1>レビュー一覧</h1>
    <div class="row">
      <div class="col-sm-8">
        <div class="row multi-columns-row post-columns">
          <% @review.each do |review| %>
            <div class="col-md-6 col-lg-6">
              <div class="post">
                <div class="post-thumbnail">
                  <%= image_tag(review.image.to_s, :class => "fit-img") if review.image.to_s %>
                </div>
                <div class="post-header font-alt">
                  <h2 class="post-title"><%= review.title %></h2>
                  <div class="post-meta">
                      <% post_user = review.user %>
                     By&nbsp;<%= link_to post_user.name, user_path(id: post_user.id) %>&nbsp;| <%= review.created_at.strftime('%d %B') %> | <%= review.comments.count %> Comments
                  </div>
                </div>
                <div class="post-entry">
                  <p>A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.</p>
                </div>
                <div class="post-more"><%= link_to '詳細を確認する', review_path(review.id) %></div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="pagination font-alt"><%= paginate @review %></div>
      </div>
    </div>
  </div>
</section>
