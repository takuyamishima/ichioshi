<h1>レビュアー一覧</h1>

<div class="function-images">
 <div class="function-image">
    <% @users.each do |user| %>
      <td><%= link_to user.name, user %></td>
    <% end %>
 </div>
</div>

<h1>レビュ一覧</h1>
<div class="function-images">
 <div class="function-image">
<% @review.each do |review| %>
